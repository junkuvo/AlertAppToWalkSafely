<!--         android:background="#DDFFFFFF" /> -->

    <TextView
        android:id="@+id/ShipmentDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ShipmentDate"
        android:layout_alignBottom="@+id/ShipmentDate"
        android:layout_alignLeft="@+id/ExpShipmentDateValue"
        android:ems="6"
        android:text="TextView" />

    <TextView
        android:id="@+id/ShipmentQTYValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ShipmentQTY"
        android:layout_alignBottom="@+id/ShipmentQTY"
        android:layout_alignLeft="@+id/ExpShipmentQTYValue"
        android:text="TextView" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/supplierValue"
        android:layout_marginTop="25dp" >

    </ListView>

    <TextView
        android:id="@+id/ShipmentQTY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ShipmentDate"
        android:layout_alignBottom="@+id/ShipmentDate"
        android:layout_alignLeft="@+id/ExpShipmentQTY"
        android:text="@string/actualShipQTY" />

    <TextView
        android:id="@+id/ExpShipmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/supplierTitle"
        android:layout_toRightOf="@+id/supplierValue"
        android:layout_marginLeft="15dp"
        android:text="@string/expectedShipDate" />

    <TextView
        android:id="@+id/ExpShipmentDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ExpShipmentDate"
        android:layout_alignBottom="@+id/ExpShipmentDate"
        android:layout_toRightOf="@+id/ExpShipmentDate"
        android:ems="6"
        android:text="TextView" />

    <TextView
        android:id="@+id/ExpShipmentQTY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ExpShipmentDateValue"
        android:layout_alignBottom="@+id/ExpShipmentDateValue"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ExpShipmentDateValue"
        android:text="@string/expectedShipQTY" />

    <TextView
        android:id="@+id/ExpShipmentQTYValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ExpShipmentQTY"
        android:layout_alignBottom="@+id/ExpShipmentQTY"
        android:layout_toRightOf="@+id/ExpShipmentQTY"
        android:text="TextView" />

    <TextView
        android:id="@+id/supplierValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/supplierTitle"
        android:layout_alignBottom="@+id/supplierTitle"
        android:layout_toRightOf="@+id/supplierTitle"
        android:ems="10"
        android:text="TextView" />

    <TextView
        android:id="@+id/ShipmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supplierValue"
        android:layout_alignLeft="@+id/ExpShipmentDate"
        android:layout_marginTop="2dp"
        android:text="@string/actualShipDate" />
    
</RelativeLayout><!-- From: file:/C:/workspace_beancube/AndroidStudio/test1/res/layout/fragment_shipment_item_detail.xml -->