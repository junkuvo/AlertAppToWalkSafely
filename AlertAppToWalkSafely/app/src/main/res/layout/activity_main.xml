<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="アプリの使い方"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="歩きスマホ中に下を向くと\nメッセージを表示します。\n表示したいメッセージを入力し、\n「開始」ボタンを押してください。"
        android:id="@+id/txtTendency"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="30"
        android:max="60"
        android:id="@+id/skbSensitivity"
        android:layout_above="@+id/txtAlertMessage"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAlertMessage"
        android:text="前方に注意して下さい"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始"
        android:id="@+id/button"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※下記の機能追加を検討しています。
\n- ホーム画面に常にON/OFFスイッチを表示
\n- メッセージ出力の有無設定機能
\n- バイブレーションの有無設定機能
\n    その他、ご要望等はお手数ですがレビューにてご連絡お願い致します。
\n    なお、当アプリのご利用は自己責任にてお願い致します。"
        android:id="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="弱"
        android:id="@+id/txtWeak"
        android:layout_alignTop="@+id/skbSensitivity"
        android:layout_toLeftOf="@+id/skbSensitivity"
        android:layout_toStartOf="@+id/skbSensitivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="強"
        android:id="@+id/txtStrong"
        android:layout_alignTop="@+id/skbSensitivity"
        android:layout_toRightOf="@+id/skbSensitivity"
        android:layout_toEndOf="@+id/skbSensitivity"/>
</RelativeLayout>
